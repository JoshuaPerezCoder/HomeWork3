lass FoodItem:
   #setting up null variables for oncoming input values
   def __init__(self, name="None", fat=0.0, carbs=0.0, protein=0.0):
       self.name = name
       self.fat = fat
       self.carbs = carbs
       self.protein = protein
#calculating the amount of calories one gets from eating certain foods
   def get_calories(self, num_servings):
       calories = ((self.fat * 9) + (self.carbs * 4) + (self.protein * 4)) * num_servings
       return calories
# giving null values their input values
if __name__ == '__main__':
   food_name = input()
   fat = float(input())
   carbs = float(input())
   protein = float(input())
   num_servings = float(input())
#starting off with null values of zero for no food
   food1 = FoodItem()
   calories1 = food1.get_calories(num_servings)
   print("Nutritional information per serving of None:")
   print(f"   Fat: {food1.fat:.2f} g")
   print(f"   Carbohydrates: {food1.carbs:.2f} g")
   print(f"   Protein: {food1.protein:.2f} g")
   print(f"Number of calories for {num_servings:.2f} serving(s): {calories1:.2f}\n")
# using input values to calculate difference in calories
   food2 = FoodItem(food_name, fat, carbs, protein)
   calories2 = food2.get_calories(num_servings)
   print(f"Nutritional information per serving of {food2.name}:")
   print(f"   Fat: {food2.fat:.2f} g")
   print(f"   Carbohydrates: {food2.carbs:.2f} g")
   print(f"   Protein: {food2.protein:.2f} g")
   print(f"Number of calories for {num_servings:.2f} serving(s): {calories2:.2f}")


